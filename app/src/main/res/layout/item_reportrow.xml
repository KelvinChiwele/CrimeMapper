<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rv_umbrella"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview_red"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_title_block"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="@dimen/item_row"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/holo_green_light"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                android:textColor="@android:color/white"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="8sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_transit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_title_block"
            android:textColor="@color/colorMediumGrey"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_transit"
            android:textColor="@color/colorMediumGrey"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_station"
            android:textColor="@color/colorText"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/oval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/suspects"
            android:padding="7dp"
            android:textColor="@color/colorWhite"
            android:elevation="4dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>